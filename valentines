<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Be My Valentine?</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #ffe6e6;
        }
        .container {
            margin-top: 50px;
            padding: 20px;
            background: white;
            display: inline-block;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.2);
        }
        button {
            display: block;
            margin: 10px auto;
            padding: 10px 20px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .yes { background-color: #ff4d4d; color: white; }
        .no { background-color: #999; color: white; }
    </style>
</head>
<body>
    <div class="container" id="question">
        <h2>Do you like surprises? 🎁</h2>
        <button class="yes" onclick="nextQuestion(true)">Yes</button>
        <button class="no" onclick="nextQuestion(false)">No</button>
    </div>

    <script>
        function nextQuestion(answer) {
            const container = document.getElementById("question");
            if (answer) {
                container.innerHTML = `
                    <h2>Do you like chocolate? 🍫</h2>
                    <button class="yes" onclick="finalQuestion(true)">Yes</button>
                    <button class="no" onclick="finalQuestion(false)">No</button>
                `;
            } else {
                container.innerHTML = `<h2>Well, this is awkward... but will you still be my Valentine? 🥺</h2>
                                      <button class="yes" onclick="showResult(true)">Yes</button>
                                      <button class="no" onclick="showResult(false)">No</button>`;
            }
        }
        
        function finalQuestion(answer) {
            const container = document.getElementById("question");
            if (answer) {
                container.innerHTML = `<h2>Will you be my Valentine? ❤️</h2>
                                      <button class="yes" onclick="showResult(true)">Yes</button>
                                      <button class="no" onclick="showResult(false)">No</button>`;
            } else {
                container.innerHTML = `<h2>No chocolate?? But... will you still be my Valentine? 😆</h2>
                                      <button class="yes" onclick="showResult(true)">Yes</button>
                                      <button class="no" onclick="showResult(false)">No</button>`;
            }
        }
        
        function showResult(answer) {
            const container = document.getElementById("question");
            if (answer) {
                container.innerHTML = `<h2>YAY! 🎉 Can't wait for our Valentine's date! 💕</h2>`;
            } else {
                container.innerHTML = `<h2>😭 Well... I still think you're amazing! 💖</h2>`;
            }
        }
    </script>
</body>
</html>
